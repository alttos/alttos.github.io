---
// import Logo from '../assets/theme-images/logo3.png';

const { settings } = Astro.props;

interface NavItem {
  title: string;
  link: string;
}
---

<header class='wrapper bg-loop font-semibold'>
  <!-- Wrapper -->
  <div class='bs-container py-2 flex justify-between items-center'>
    <!-- Logo -->
    <a
      href='/'
      aria-label={settings.title + ' - Home'}
      class='flex items-center cursor-pointer'
    >
      <img
        src='/alttos-logo.svg'
        loading='lazy'
        class='mr-2'
        height='48'
        width='48'
        alt='Alttos AI Logo'
      />
      <span class='text-white text-2xl font-bold'
        >ALTTOS <span
          class='bg-gradient-to-r from-blue-500 via-cyan-400 to-green-400 bg-clip-text text-transparent'
          >AI</span
        ></span
      >
    </a>

    <!-- Nav -->
    <nav class='hidden col-span-6 md:flex mx-auto self-stretch lg:gap-2'>
      <!-- Links -->
      {
        settings.nav.map((item: NavItem) => (
          <a
            class='bs-btn !bg-transparent before:translate-y-full hover:before:translate-y-0'
            href={item.link}
          >
            {item.title}
          </a>
        ))
      }
    </nav>
  </div>
</header>
